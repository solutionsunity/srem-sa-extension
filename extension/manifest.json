{
  "manifest_version": 3,
  "name": "SREM.sa Real Estate Deeds Bridge",
  "version": "1.2.0",
  "description": "Privacy-focused SREM deed data extraction with secure token management",
  "author": "Solutions Unity Co.",
  "homepage_url": "https://solutionsunity.com",

  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "windows"
  ],

  "host_permissions": [
    "https://srem.moj.gov.sa/*",
    "https://prod-inquiryservice-srem.moj.gov.sa/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://srem.moj.gov.sa/*"],
      "js": ["shared-utils.js", "content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["shared-utils.js", "auth-response-builder.js", "chrome-runtime-helper.js", "bridge_content.js"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "response-formatter.js",
        "request-builder.js",
        "shared-utils.js",
        "auth-response-builder.js",
        "chrome-runtime-helper.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:; connect-src 'self' https://srem.moj.gov.sa https://prod-inquiryservice-srem.moj.gov.sa"
  }
}
